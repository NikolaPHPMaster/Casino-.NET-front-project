@{
    ViewBag.Title = "Kontakt";
}
<div id="page">
    <div id="page-bgtop">
        <div class="container">
            <form id="contact" action="" method="post">
                <h3>Brz kontakt</h3>
                <h4>Kontaktirajte nas danas i odgovoricemo u roku od 24h</h4>
                <fieldset>
                    <input placeholder="Ime" type="text" tabindex="1" required autofocus>
                </fieldset>
                <fieldset>
                    <input placeholder="Adresa" type="email" tabindex="2" required>
                </fieldset>
                <fieldset>
                    <input placeholder="Telefon" type="tel" tabindex="3" required>
                </fieldset>

                <fieldset>
                    <textarea placeholder="Napisite vasu poruku ovde...." tabindex="5" required></textarea>
                </fieldset>
                <fieldset>
                    <button name="submit" type="submit" id="contact-submit" data-submit="...Sending">Posalji</button>
                </fieldset>
            </form>


        </div>

        <div id="page-bgbtm">
        </div>
    </div>
</div>
